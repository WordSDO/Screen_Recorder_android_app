<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="-90"
                android:centerColor="#dfdfdf"
                android:centerY="0.75"
                android:endColor="#dfdfdf"
                android:startColor="#dfdfdf" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:angle="-90"
                    android:centerColor="#90ffffff"
                    android:centerY="0.75"
                    android:endColor="#90ffffff"
                    android:startColor="#90ffffff" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:angle="-90"
                    android:centerColor="@color/colorRed"
                    android:centerY="0.75"
                    android:endColor="@color/colorRed"
                    android:startColor="@color/colorRed" />
            </shape>
        </clip>
    </item>
</layer-list>
