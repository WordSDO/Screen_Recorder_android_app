<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScreenRecorder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorRed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorRed</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textViewStyle">@style/LightTextView</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/appBgColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ScreenRecorder.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorRed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorRed</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/appBgColor</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>

        <item name="android:colorControlActivated">@color/colorRed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="preferenceTheme">@style/SettingsFragmentStyle</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>

        <item name="popupMenuStyle">@style/popupMenuStyle</item>

    </style>

    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/appBgColor</item>
    </style>

    <style name="SettingsFragmentStyle" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="colorPrimary">@color/appBgColor</item>
        <item name="colorPrimaryDark">@color/appBgColor</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/colorRed</item>
        <item name="android:background">@color/appBgColor</item>
    </style>


    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/colorRed</item>
        <item name="colorControlNormal">@color/GRAY</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@color/appBgColor</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="color">@color/colorRed</item>
    </style>


    <style name="MyDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorRed</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <!-- Used for the background -->
        <item name="android:background">@color/appBgColor</item>
    </style>


    <style name="PreferenceTheme" parent="@style/Theme.ScreenRecorder">
        <item name="android:colorBackground">@color/appBgColor</item>
    </style>

    <style name="VideoTrimmerTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="colorPrimary">@color/colorTrimmerPrimary</item>
        <item name="colorPrimaryDark">@color/colorTrimmerPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="TxtRgStyle22">
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/colorRed</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:layout_gravity">clip_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TxtSemiSmallStyle22">
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/colorRed</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:layout_gravity">clip_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VView">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VWView">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FView">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ImageTrim">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LView">
        <item name="android:orientation">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleRoot">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LightTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme_Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ll_float_style">
        <item name="android:background">@drawable/shape</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ll_float_top_style">
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorRed</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/colorRed</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>