<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appBgColor">

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ad_headline"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/recordingTitle"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ad_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ad_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:text="AD:"
                android:textAllCaps="true"
                android:textColor="@color/recordingTitle"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/ad_icon"
                app:layout_constraintTop_toBottomOf="@+id/ad_headline"
                app:layout_constraintTop_toTopOf="@+id/ad_body" />

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="2"
                android:maxLines="2"
                android:text="This is the way This is the way This is the way This is the wayThis is the way"
                android:textColor="@color/recordingTitle"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ad_text"
                app:layout_constraintTop_toBottomOf="@+id/ad_headline" />

            <Button
                android:id="@+id/ad_action"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rounded_theme_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:text="INSTALL"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ad_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
